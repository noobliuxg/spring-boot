<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.springboot.dao.TeacherMapper">
    <resultMap id="BaseResultMap" type="com.java.springboot.entity.Teacher">
        <result property="id" jdbcType="INTEGER" column="ID"/>
        <result property="teaName" jdbcType="VARCHAR" column="TEA_NAME"/>
        <result property="teaAge" jdbcType="INTEGER" column="TEA_AGE"/>
    </resultMap>
    <sql id="Base_Column_List">ID,TEA_NAME,TEA_AGE</sql>
    <insert id="insert" useGeneratedKeys="true" keyColumn="ID" keyProperty="id" parameterType="com.java.springboot.entity.Teacher">
        INSERT INTO TEACHER(TEA_NAME,TEA_AGE) VALUES(#{teaName},#{teaAge})
    </insert>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM TEACHER
    </select>

    <select id="selectOne" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List" />
        FROM TEACHER
        WHERE ID=#{id}
    </select>

    <select id="selectWhere" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM TEACHER
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="id > 0">
                AND ID=#{id}
            </if>
            <if test="teaName!=null">
                AND TEA_NAME LIKE #{teaName}
            </if>
            <if test="teaAge > 0">
                AND TEA_AGE=#{teaAge}
            </if>

        </trim>
    </select>

    <update id="update" parameterType="com.java.springboot.entity.Teacher">
        UPDATE TEACHER
        <set>
            <if test="teaName!=null">
                TEA_NAME = #{teaName},
            </if>
            <if test="teaAge > 0">
                TEA_AGE=#{teaAge},
            </if>
        </set>
        <where>
            ID=#{id}
        </where>
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM TEACHER WHERE ID=#{id}
    </delete>
</mapper>